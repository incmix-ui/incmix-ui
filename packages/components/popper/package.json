{
  "name": "@incmix-ui/popper",
  "version": "3.0.10",
  "description": "A React component and hooks wrapper for popper.js",
  "keywords": [
    "react",
    "popper",
    "popover",
    "tooltips",
    "popper.js",
    "positioning",
    "popperjs-modifier",
    "ui",
    "chakra ui",
    "component"
  ],
  "sideEffects": false,
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/incmix-ui/incmix-ui.git",
    "directory": "packages/components/popper"
  },
  "bugs": {
    "url": "https://github.com/incmix-ui/incmix-ui/issues"
  },
  "dependencies": {
    "@chakra-ui/react-use-merge-refs": "workspace:*",
    "@chakra-ui/react-types": "workspace:*",
    "@popperjs/core": "^2.9.3"
  },
  "devDependencies": {
    "@chakra-ui/hooks": "workspace:*",
    "framer-motion": "^6.2.9",
    "react": "^18.0.0",
    "clean-package": "2.1.1"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src/index.ts",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  }
}
